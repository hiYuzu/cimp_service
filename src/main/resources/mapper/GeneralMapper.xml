<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sinosoft.cimp_service.dao.IGeneralDao">
    <select id="activeUsers" parameterType="activeUser">
        SELECT * FROM active_users WHERE 1=1
        <if test="activeUser.time != null">
            AND time = #{activeUser.time}
        </if>
        <if test="activeUser.areaCode != null">
            AND areaCode = #{activeUser.areaCode}
        </if>
        <if test="activeUser.amount != 0">
            AND amount = #{activeUser.amount}
        </if>
    </select>
</mapper>